        <monument><block>779,10,681</block></monument>
    </wool>
    <wool color="purple">
        <monument><block>788,10,684</block></monument>
    </wool>
    <wool color="cyan">
        <monument><block>776,10,672</block></monument>
    </wool>
</wools>
